{
  "name": "porkate-valid8-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "A flexible TypeScript KYC/KYB verification package with multiple service adapters and comprehensive event logging",
  "scripts": {
    "build": "lerna run build",
    "dev": "lerna run dev --parallel",
    "test": "lerna run test",
    "test:watch": "lerna run test:watch --parallel",
    "test:coverage": "lerna run test:coverage",
    "lint": "lerna run lint",
    "lint:fix": "lerna run lint:fix",
    "type-check": "lerna run type-check",
    "format": "prettier --write \"packages/**/*.ts\"",
    "clean": "lerna clean -y && rm -rf node_modules",
    "bootstrap": "lerna bootstrap",
    "version": "lerna version",
    "publish": "lerna publish",
    "version:patch": "./scripts/bump-version.sh patch",
    "version:minor": "./scripts/bump-version.sh minor",
    "version:major": "./scripts/bump-version.sh major",
    "publish:local": "pnpm run build && pnpm publish -r --access public",
    "docs:generate": "npm run docs:html && npm run docs:markdown",
    "docs:html": "jsdoc -c jsdoc.json",
    "docs:markdown": "jsdoc2md packages/**/*.ts --configure jsdoc-markdown.json --files 'packages/**/*.ts' --template docs/templates/README.hbs > docs/markdown/API.md",
    "docs:serve": "cd docs/html && python3 -m http.server 8080",
    "docs:clean": "rm -rf docs/html docs/markdown"
  },
  "keywords": [
    "kyc",
    "kyb",
    "verification",
    "identity",
    "nigeria",
    "nin",
    "bvn",
    "cac",
    "identitypass",
    "events",
    "monitoring",
    "dashboard",
    "monorepo"
  ],
  "author": "Porkate",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@nestjs/common": "^10.3.0",
    "@nestjs/core": "^10.3.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "better-docs": "^2.7.3",
    "docdash": "^2.0.2",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "jsdoc": "^4.0.5",
    "jsdoc-plugin-typescript": "^2.3.0",
    "jsdoc-to-markdown": "^8.0.3",
    "lerna": "^8.2.4",
    "prettier": "^3.1.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0",
    "ts-jest": "^29.4.5",
    "typescript": "^5.3.0"
  }
}
