{
  "name": "@porkate/valid8",
  "version": "1.0.0",
  "description": "A flexible TypeScript KYC/KYB verification package with multiple service adapters and comprehensive event logging",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "pnpm run build"
  },
  "keywords": [
    "kyc",
    "kyb",
    "verification",
    "identity",
    "nigeria",
    "nin",
    "bvn",
    "cac",
    "identitypass",
    "events",
    "monitoring",
    "dashboard"
